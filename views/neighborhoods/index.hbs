<div>
    <h1>NEIGHBORHOODS in LOCALIVING's DATABASE</h1>

    {{#each neighborhoods}}
    <div class="row">
        <div class="col s3">
            <div class="card">
                <div class="card-image">
                    <img src="{{this.image}}">
                </div>
                <div class="card-content">
                    <h3 id="card-title">{{this.name}}</h3>
                    <p>{{this.description}}</p>
                </div>
                <div class="card-action">
                    <a href="/neighborhoods/{{this._id}}/happenings">Read More</a>
            </div>
        </div>

    </div>
    {{/each}}

    <h5>
        <a href="/neighborhoods/new">Suggest a New Neighborhood</a>
        <a href="/">Back to LOCALIVIN's Homepage</a>
    </h5>
    </div>
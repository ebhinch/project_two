<div>
    <h1>NEIGHBORHOODS in LOCALIVING's DATABASE</h1>

    {{#each neighborhoods}}
        <div class="row">
            <div class="col s2">
                <div class="card">
                    <div class="card-image">
                        <img src="{{this.image}}">
                        <span class="card-title">{{this.name}}</span>
                    </div>
                    <div class="card-content">
                        <p>{{this.description}}</p>
                    </div>
                    <div class="card-action">
                        <a href="/neighborhoods/{{this._id}}/happenings">Read More</a>
                    </div>
                </div>

            </div>
        {{/each}}
        </div>

